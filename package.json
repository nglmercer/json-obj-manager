{
  "name": "json-obj-manager",
  "version": "1.4.1",
  "type": "module",
  "description": "Agnostic JSON data manager for Node.js and the browser.",
  "source": "src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "types": "./dist/index.d.ts",
  "keywords": [
    "json",
    "data",
    "storage",
    "node",
    "adapter",
    "browser",
    "localstorage"
  ],
  "author": "memelser",
  "license": "GPL-3.0-only",
  "homepage": "https://github.com/nglmercer/json-obj-manager",
  "bugs": {
    "url": "https://github.com/nglmercer/json-obj-manager/issues"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && microbundle --entry src/index.ts --format modern,cjs,esm,umd --target node",
    "build:all": "npm run clean && microbundle --entry src/index.ts,src/node.ts,src/browser.ts --format modern,cjs,esm --target node",
    "dev": "microbundle watch --entry src/index.ts --format modern,cjs,esm",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.module.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./node": {
      "import": "./dist/node.module.js",
      "require": "./dist/node.js",
      "types": "./dist/node.d.ts"
    },
    "./browser": {
      "import": "./dist/browser.module.js",
      "require": "./dist/browser.js",
      "types": "./dist/browser.d.ts"
    },
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "microbundle": "^0.15.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.0.0"
  }
}
